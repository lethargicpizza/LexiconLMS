@model IEnumerable<LexiconLMS.Models.ApplicationUser>

@{
    ViewBag.Title = "Klasslista";
}

<h2>Klasslista</h2>


@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FörNamn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EfterNamn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FörNamn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EfterNamn)
                </td>
                <td>
                    <a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>Du läser för närvarande ingen kurs.</p>
}


