@using Microsoft.AspNet.Identity
@using LexiconLMS.Extensions;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PLC Skola</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navbar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PLC Skola", "Index", "Skol", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @{
                        if (User.IsInRole("Lärare"))
                        {
                            <li>@Html.ActionLink("Hem", "Index", "Skol")</li>
                            <li>@Html.ActionLink("Kurser", "Index", "Kurs")</li>
                            <li>@Html.ActionLink("Moduler", "Index", "Moduls")</li>
                            <li>@Html.ActionLink("Aktiviteter", "Index", "Aktivitet")</li>
                            <li>@Html.ActionLink("Användare", "Index", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Hem", "Index", "Skol")</li>
                            <li>@Html.ActionLink("Schema", "Index", "Moduls")</li>
                            <li>@Html.ActionLink("Klasslista", "Klasslista", "Kurs")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")  
            </div>
        </div>
    </div>
    <!-- Status bar -->
    @{
        string händelse = (string)TempData["Händelse"];
        if (!String.IsNullOrWhiteSpace(händelse))
        {
            string status = (string)TempData["Status"];
            if (status.CompareTo("Lyckat") == 0)
            {
                <div class="alert alert-success" style="text-align:center;">
                    <p>@händelse</p>
                </div>
            }

            else if (status.CompareTo("Misslyckat") == 0)
            {
                    <div class="alert alert-danger" style="text-align:center;">
                        <p>@händelse</p>
                    </div>
                }
            }
        }

    <!-- Body content-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PLC Skola</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
