@model IEnumerable<LexiconLMS.Models.Modul>

@{
    ViewBag.Title = "Index";
}

@if (Model != null)
{
    <h2>Schema för: @ViewBag.KursNamn</h2>
}

@if (User.IsInRole("Lärare"))
{
    <p>
        @Html.ActionLink("Lägg till Modul", "Create")
    </p>
}
else
{
    <br>
}

@if (Model != null)
{ 
<table class="table">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.Namn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlutDatum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        bool avklaradModul = (DateTime.Today > item.SlutDatum);
        bool pågåendeModul = (DateTime.Today >= item.StartDatum  && DateTime.Today <= item.SlutDatum);
        string stil = "";

        if (avklaradModul)
        {
            stil = "success";
        }
        else if(pågåendeModul)
        {
            stil = "warning";
        }
        else
        {
            stil = "danger";
        }
           <tr class="@stil">
            @if (pågåendeModul)
            {
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Namn)</b>
                </td>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.StartDatum)</b>
                </td>
                <td>
                   <b>@Html.DisplayFor(modelItem => item.SlutDatum)</b>
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Namn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDatum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlutDatum)
                </td>
            }

            @if (User.IsInRole("Lärare"))
            {
                <td>
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id })|
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })|
                    @Html.ActionLink("Ta Bort", "Delete", new { id = item.Id })|
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>
}
else
{
    <p>Du läser för närvarande ingen kurs!</p>
}

