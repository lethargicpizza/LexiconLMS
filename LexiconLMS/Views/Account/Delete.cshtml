@model LexiconLMS.Models.ApplicationUser

@{
    ViewBag.Title = "Ta bort";
 }

<h2>Ta bort användare</h2>
<h4>Är du säker på att du vill ta bort @Model.FullNamn ?</h4>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => Model.Email )
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.Email )
        </dd>

        <dt>
            @Html.DisplayNameFor(model => Model.FullNamn )
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.FullNamn )
        </dd>
    </dl>

